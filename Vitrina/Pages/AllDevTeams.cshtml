@page
@model Vitrina.Pages.AllDevTeamsModel

@{
    ViewData["Title"] = "AllDevTeams";
}
<div style="display: flex; flex-direction:row; justify-content: space-between;">
    <div style="position:sticky; top:0;">

    </div>
    <div id="id1">
        <div style="margin:0% 25%; display: flex; justify-content: space-between; background: rgba(24, 24, 24, 0.05); border-radius: 24px; margin-bottom:15px;">
            <div style="background: #FFFFFF; width:50%; box-shadow: 0px 2px 9px rgba(24, 24, 24, 0.09); border-radius: 24px; padding:5px;">
                <a href="/Index"><p style="color: #181818; margin-bottom:0px; text-align:center; font-size: 18px; line-height: 24px;">Продукты</p></a>
            </div>

            <div style="color: rgba(196, 196, 196, 1); width:50%; box-shadow: 0px 2px 9px rgba(24, 24, 24, 0.09); border-radius: 24px; padding:5px;">
                <p style="text-align:center; margin-bottom:0px; color:rgba(24, 24, 24, 0.7); font-size: 18px; line-height: 23px;">Участники</p>
            </div>
        </div>



        @foreach (var item in Model.DevTeam)
        {
            <br />
            <div style="text-align: center; margin: 0% 10%; border-radius: 24px; box-shadow: 0 0 10px 5px rgba(221, 221, 221, 1);">
                <table>
                    <tr>
                        <td>
                            <div style="padding:10px; ">
                                <img src=@item.ImageString alt="Rectangle-4" style="border-radius:16px; width:150px">
                            </div>
                        </td>

                        <td width="100%">
                            <div style="padding-top:10px;">
                                <header>
                                    <div style="display: flex; justify-content: space-between;">
                                        <h3 style="color: #181818;">@item.Name</h3><h6 style="padding-right: 10px; color: #181818;">20.11.2021</h6>
                                    </div>
                                    
                                </header>
                                <div>
                                    <p style="text-align: left; color: #181818;">@item.Desc</p>
                                </div>
                                <footer style="display: flex; justify-content: end; flex-direction:row;">
                                    <a style="margin:0px 15px; padding-right:10px; margin-bottom:10px;" asp-page="./Details" asp-route-id="@item.ID">Подробнее</a>
                                </footer>

                            </div>
                        </td>
                    </tr>

                </table>
            </div>
        }
    </div>
</div>
